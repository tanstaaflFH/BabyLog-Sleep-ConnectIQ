<layout id="MainLayout">
    <label id="lblLastSleep" font="Graphics.FONT_SMALL" x="center" y="90" justification="Graphics.TEXT_JUSTIFY_CENTER" color="0xFFFFFF" />
    <label id="lblElapsedSleep" font="Graphics.FONT_MEDIUM" x="center" y="130" justification="Graphics.TEXT_JUSTIFY_CENTER" color="0xFFFFFF" />
    <label id="targetMore" font="Graphics.FONT_MEDIUM" x="center" y="195" justification="Graphics.TEXT_JUSTIFY_CENTER" color="0xFFFFFF" text="..." />
    <drawable id="ButtonBorders" />        
    <button x="center" y="10" width="36" height="36" background="Gfx.COLOR_TRANSPARENT" behavior="onToggleSleep">
    	<state id="stateDefault" bitmap="@Drawables.StartSleepIconDefault" />
    	<state id="stateSelected" bitmap="@Drawables.StartSleepIconPressed" />
    	<state id="stateHighlighted" bitmap="@Drawables.StartSleepIconPressed" />
    	<state id="stateDisabled" color="Gfx.COLOR_TRANSPARENT" />    	    	
    </button>
    <button x="center" y="205" width="240" height="35" background="Gfx.COLOR_TRANSPARENT" behavior="onNextPage" >
    	<state id="stateDefault" color="Gfx.COLOR_TRANSPARENT" />
    	<state id="stateSelected" color="Gfx.COLOR_WHITE" />
    	<state id="stateHighlighted" color="Gfx.COLOR_WHITE" />
    	<state id="stateDisabled" color="Gfx.COLOR_TRANSPARENT" />    	    	
    </button>
</layout>